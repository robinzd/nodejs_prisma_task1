generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user_registration {
  id             Int      @id @default(autoincrement())
  first_name     String   @db.VarChar(255)
  last_name      String   @db.VarChar(255)
  contact_number BigInt   @unique(map: "contact_number")
  email_id       String   @unique(map: "email_id") @db.VarChar(100)
  address        String   @db.VarChar(100)
  created_at     DateTime @db.DateTime(0)
  updated_at     DateTime @db.DateTime(0)
  status         Int
}

model customer_tbl {
  ID                  Int              @id @default(autoincrement())
  customer_first_name String           @db.VarChar(255)
  customer_last_name  String           @db.VarChar(255)
  Email_id            String           @db.VarChar(255)
  deliver_status      deliver_status[]
  orders_tbl          orders_tbl[]
}

model orders_tbl {
  ID            Int           @id @default(autoincrement())
  product_name  String?       @db.VarChar(255)
  Product_price Int?
  customer_id   Int?
  customer_tbl  customer_tbl? @relation(fields: [customer_id], references: [ID], onDelete: Restrict, onUpdate: Restrict, map: "FK_PersonOrder")

  @@index([customer_id], map: "FK_PersonOrder")
}

model deliver_status {
  ID           Int          @id @default(autoincrement())
  status       Int
  customer_id  Int
  customer_tbl customer_tbl @relation(fields: [customer_id], references: [ID], onUpdate: Restrict, map: "FK_orderstatus")

  @@index([customer_id], map: "FK_orderstatus")
}
